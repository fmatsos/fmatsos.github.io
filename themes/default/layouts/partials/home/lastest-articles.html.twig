<section class="flex flex-col gap-16">
    <h2>
        <svg class="w-6 h-6 inline" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path class="fill-zinc-100 stroke-zinc-400 dark:fill-zinc-100/10 dark:stroke-zinc-500" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 16 4-4-4-4m6 8 4-4-4-4"/>
        </svg>
        <span class="underline underline-offset-4">{{ "Derniers articles"|trans }}</span>
    </h2>
    {%- for article in site.pages.showable|filter_by('section', 'articles')|sort_by_date(desc_title=true)|slice(0, 3) %}
        <article class="group relative flex flex-col items-start">
            <h3>
                <span class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 border-b border-zinc-200 bg-zinc-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 sm:-inset-x-6 sm:rounded-2xl dark:bg-zinc-800/50"></span>
                <a href="{{ article.path }}">
                    <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl"></span>
                    <span class="relative z-10">{{ article.title }}</span>
                </a>
            </h3>
            <time dateTime="{{ article.date|date('Y-m-d') }}" class="relative z-10 order-first mb-3 flex items-center text-sm text-zinc-400 dark:text-zinc-500 pl-3.5">
                <span class="absolute inset-y-0 left-0 flex items-center" aria-hidden="true">
                    <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-500"></span>
                </span>
                {{ article.date|format_date('long') }}
            </time>
            <div class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                {{ article.content|excerpt_html }}
            </div>
            <div aria-hidden="true" class="relative z-10 mt-4 flex items-center text-sm font-medium text-teal-500">
                {{ "Lire la suite"|trans }}
                <svg viewBox="0 0 16 16" fill="none" aria-hidden="true" class="ml-1 h-4 w-4 stroke-current">
                    <path d="M6.75 5.75 9.25 8l-2.5 2.25" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
            </div>
        </article>
    {%- endfor -%}
</section>
