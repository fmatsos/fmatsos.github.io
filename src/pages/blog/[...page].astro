---
import type { GetStaticPaths } from 'astro';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/organisms/PageHeader.astro';
import PostCard from '../../components/molecules/PostCard.astro';
import Pagination from '../../components/molecules/Pagination.astro';
import StructuredData from '../../components/molecules/StructuredData.astro';

export const getStaticPaths = (async ({ paginate }) => {
  const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft && data.lang === 'fr'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  return paginate(posts, { pageSize: 25 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---
<BaseLayout title="Blog" description="Articles et réflexions rédigés par Franck Matsos." lang="fr" currentPath="/blog">
  <StructuredData
    type="Blog"
    data={{
      name: 'Blog de Franck Matsos',
      description: 'Articles et réflexions sur le développement web, l\'architecture logicielle et le numérique.',
      url: 'https://franck.matsos.fr/blog',
      inLanguage: 'fr-FR',
      author: {
        '@type': 'Person',
        name: 'Franck Matsos',
        url: 'https://franck.matsos.fr'
      }
    }}
  />

  <div class="space-y-12">
    <PageHeader
      title="Blog"
      subtitle={`${page.total} articles`}
      description="Sur ce blog, vous trouverez des articles sur le développement, les conférences auxquelles j'ai assisté, mes réflexions professionnelles et bien d'autres encore."
      icon="✍️"
    />

    <div class="space-y-8">
      {page.data.map((post, index) => (
        <div class="animate-slide-in-right" style={`animation-delay: ${index * 80}ms`}>
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
          lang="fr"
        />
        </div>
      ))}
    </div>

    <Pagination
      currentPage={page.currentPage}
      lastPage={page.lastPage}
      prevUrl={page.url.prev}
      nextUrl={page.url.next}
    />
  </div>
</BaseLayout>

