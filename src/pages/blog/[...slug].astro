---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/atoms/Card.astro';
import Badge from '../../components/atoms/Badge.astro';
import TagList from '../../components/molecules/TagList.astro';
import Breadcrumb from '../../components/molecules/Breadcrumb.astro';
import ArticleNavigation from '../../components/molecules/ArticleNavigation.astro';
import { extractHeadings } from '../../utils/headings';
import { SITE_TITLE } from '../../config';

const dateFormatter = new Intl.DateTimeFormat('fr-FR', { dateStyle: 'long' });

export async function getStaticPaths() {
  const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  return posts.map((post, index) => ({
    params: { slug: post.slug },
    props: { 
      post,
      prevPost: posts[index + 1] ?? null,
      nextPost: posts[index - 1] ?? null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();
const { title, description, pubDate, tags } = post.data;

const breadcrumbItems = [
  { label: 'Blog', href: '/blog' },
  { label: title }
];
---
<BaseLayout
  title={title}
  description={description}
  lang="fr"
  currentPath={Astro.url.pathname}
  type="article"
  author={SITE_TITLE}
  publishedTime={pubDate.toISOString()}
>
  <Breadcrumb items={breadcrumbItems} lang="fr" />
  
  <article>
      <Card class="space-y-6 p-6">
        <div class="flex flex-wrap items-center gap-3 text-sm text-foreground/70 dark:text-foreground-dark/70">
          <Badge variant="accent" class="font-semibold">
            <time datetime={pubDate.toISOString()}>
              {dateFormatter.format(pubDate)}
            </time>
          </Badge>
          <TagList tags={tags} />
        </div>

        <header class="space-y-3">
          <h1 class="text-3xl font-bold sm:text-4xl">{title}</h1>
          <p class="text-lg text-foreground/80 dark:text-foreground-dark/80 italic border-l-4 border-accent dark:border-accent-dark pl-4">
            {description}
          </p>
        </header>

        <div class="rich-text space-y-6 leading-relaxed [&>p:first-child]:hidden">
          <Content />
        </div>

        <ArticleNavigation prevPost={prevPost} nextPost={nextPost} />
      </Card>
    </article>
</BaseLayout>
