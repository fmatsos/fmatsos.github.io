---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/atoms/Card.astro';
import Badge from '../../components/atoms/Badge.astro';
import TagList from '../../components/molecules/TagList.astro';
import Breadcrumb from '../../components/molecules/Breadcrumb.astro';
import ArticleNavigation from '../../components/molecules/ArticleNavigation.astro';
import StructuredData from '../../components/molecules/StructuredData.astro';
import { extractHeadings } from '../../utils/headings';
import { SITE_TITLE } from '../../config';

const dateFormatter = new Intl.DateTimeFormat('fr-FR', { dateStyle: 'long' });

export async function getStaticPaths() {
  const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  return posts.map((post, index) => ({
    params: { slug: post.slug },
    props: { 
      post,
      prevPost: posts[index + 1] ?? null,
      nextPost: posts[index - 1] ?? null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();
const { title, description, pubDate, tags } = post.data;

// Extract excerpt (content before <!-- excerpt --> marker) for article header subtitle
const excerptMatch = post.body?.match(/^([\s\S]*?)<!--\s*excerpt\s*-->/);
const excerpt = excerptMatch ? excerptMatch[1].trim() : null;

const year = pubDate.getFullYear().toString();
const month = (pubDate.getMonth() + 1).toString().padStart(2, '0');

const breadcrumbItems = [
  { label: 'Blog', href: '/blog' },
  { label: year, href: `/blog/${year}` },
  { label: month, href: `/blog/${year}/${month}` },
  { label: title }
];

// BreadcrumbList data for Schema.org
const breadcrumbList = {
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Accueil',
      item: 'https://franck.matsos.fr/'
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Blog',
      item: 'https://franck.matsos.fr/blog'
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: year,
      item: `https://franck.matsos.fr/blog/${year}`
    },
    {
      '@type': 'ListItem',
      position: 4,
      name: month,
      item: `https://franck.matsos.fr/blog/${year}/${month}`
    },
    {
      '@type': 'ListItem',
      position: 5,
      name: title
    }
  ]
};

// BlogPosting data for Schema.org
const blogPostingData = {
  headline: title,
  description: description,
  datePublished: pubDate.toISOString(),
  author: {
    '@type': 'Person',
    name: SITE_TITLE,
    url: 'https://franck.matsos.fr'
  },
  publisher: {
    '@type': 'Person',
    name: SITE_TITLE
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': `https://franck.matsos.fr${Astro.url.pathname}`
  },
  keywords: tags,
  inLanguage: 'fr-FR'
};
---
<BaseLayout
  title={title}
  description={description}
  lang="fr"
  currentPath={Astro.url.pathname}
  type="article"
  author={SITE_TITLE}
  publishedTime={pubDate.toISOString()}
>
  <StructuredData type="BreadcrumbList" data={breadcrumbList} />
  <StructuredData type="BlogPosting" data={blogPostingData} />
  
  <Breadcrumb items={breadcrumbItems} lang="fr" />
  
  <article aria-labelledby="article-title">
      <Card class="space-y-6 p-6">
        <div class="flex flex-wrap items-center gap-3 text-sm text-foreground/70 dark:text-foreground-dark/70">
          <Badge variant="accent" class="font-semibold">
            <time datetime={pubDate.toISOString()}>
              {dateFormatter.format(pubDate)}
            </time>
          </Badge>
          <TagList tags={tags} />
        </div>

        <header class="space-y-3">
          <h1 id="article-title" class="text-3xl font-bold sm:text-4xl">{title}</h1>
          {(excerpt || description) && (
            <p class="text-lg text-foreground/80 dark:text-foreground-dark/80 italic border-l-4 border-accent dark:border-accent-dark pl-4">
              {excerpt || description}
            </p>
          )}
        </header>

        <div class="rich-text space-y-6 leading-relaxed [&>p:first-child]:hidden">
          <Content />
        </div>

        <ArticleNavigation prevPost={prevPost} nextPost={nextPost} />
      </Card>
    </article>
</BaseLayout>
