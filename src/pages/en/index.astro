---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/organisms/PageHeader.astro';
import Link from '../../components/atoms/Link.astro';

const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

const dateFormatter = new Intl.DateTimeFormat('en-US', { day: 'numeric', month: 'long', year: 'numeric' });
---
<BaseLayout lang="en" currentPath="/en/">
  <div class="space-y-16">
    <PageHeader 
      title="Hello, I'm Franck"
      subtitle="Web developer"
      description="PHP developer since 2009 at Akawaka, certified Opquast and Symfony. I share here my thoughts and analysis about development, software architecture and many other topics."
      icon="ðŸ‘‹"
    />

    <section class="space-y-4">
      <article class="space-y-3">
        <p>
          Passionate about creating solid and maintainable software architectures, I enjoy exploring the different facets of modern web development. My journey has allowed me to work on various projects, from refactoring legacy systems to designing new applications.
        </p>
        <p>
          On this blog, you'll find articles about development, conferences I've attended, and my professional explorations.
        </p>
      </article>
    </section>

    <section class="border border-foreground/10 bg-background/70 p-6 dark:border-background-dark/30 dark:bg-background-dark/80 space-y-6">
      <div class="flex flex-wrap gap-y-2 items-center justify-between">
        <h3 class="text-2xl font-semibold text-black dark:text-white">
          Latest posts
        </h3>
        <Link href="/en/blog">View all posts â†’</Link>
      </div>
      <ul class="space-y-4">
        {posts.map((post) => (
          <li class="space-y-1">
            <p class="text-muted">
              <time datetime={post.data.pubDate.toISOString()}>
                {dateFormatter.format(post.data.pubDate)}
              </time>
            </p>
            <Link href={`/blog/${post.slug}`} class="font-semibold text-black dark:text-white">
              {post.data.title}
            </Link>
          </li>
        ))}
      </ul>
    </section>
  </div>
</BaseLayout>
