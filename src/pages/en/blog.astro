---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/molecules/PostCard.astro';

const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---
<BaseLayout title="Blog" description="Latest articles and notes from Franck Matsos." lang="en" currentPath="/en/blog">
  <div class="space-y-12">
    <section class="space-y-4">
      <h1 class="font-semibold text-black dark:text-white">Blog</h1>
      <p>
        Articles are currently written in French, but you can browse the full list below. English versions will be published over time.
      </p>
    </section>

    <div class="space-y-8">
      {posts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
          lang="en"
        />
      ))}
    </div>
  </div>
</BaseLayout>
