---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const dateFormatter = new Intl.DateTimeFormat('en-GB', { dateStyle: 'long' });
---
<BaseLayout title="Blog" description="Latest articles and notes from Franck Matsos." lang="en" currentPath="/en/blog">
  <section class="space-y-6">
    <div class="space-y-2">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-cyan-300/80">Articles</p>
      <h1 class="text-4xl font-bold text-white">Blog</h1>
      <p class="max-w-3xl text-lg text-slate-300">
        Articles are currently written in French, but you can browse the full list below. English versions will be
        published over time.
      </p>
    </div>

    <div class="grid gap-5 md:grid-cols-2">
      {posts.map((post) => (
        <article class="relative flex h-full flex-col justify-between gap-4 rounded-2xl border border-white/10 bg-white/5 p-5 shadow-xl shadow-cyan-500/10 transition hover:-translate-y-1 hover:border-cyan-400/30 hover:shadow-cyan-500/20">
          <div class="flex items-center justify-between text-sm text-slate-400">
            <span class="rounded-full bg-white/5 px-3 py-1 font-semibold text-slate-200">
              {dateFormatter.format(post.data.pubDate)}
            </span>
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="rounded-full bg-cyan-500/15 px-2 py-1 text-xs font-semibold text-cyan-100 ring-1 ring-cyan-500/30">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <div class="space-y-2">
            <h2 class="text-2xl font-semibold text-white">
              <a class="hover:text-cyan-200" href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h2>
            <p class="text-base text-slate-300">{post.data.description}</p>
          </div>

          <div class="flex items-center gap-2 text-sm font-semibold text-cyan-200">
            <a class="inline-flex items-center gap-2 hover:text-white" href={`/blog/${post.slug}`}>
              Read article (FR)
              <span aria-hidden="true">â†’</span>
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
