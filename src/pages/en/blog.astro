---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { tagClasses, tagHref } from '../../utils/tags';

const posts = (await getCollection('posts', ({ data }) => data.published && !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const dateFormatter = new Intl.DateTimeFormat('en-GB', { dateStyle: 'long' });
---
<BaseLayout title="Blog" description="Latest articles and notes from Franck Matsos." lang="en" currentPath="/en/blog">
  <section class="space-y-6">
    <div class="space-y-2">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-primary">Articles</p>
      <h1 class="section-title">Blog</h1>
      <p class="max-w-3xl section-lead">
        Articles are currently written in French, but you can browse the full list below. English versions will be published over time.
      </p>
    </div>

    <div class="posts-grid-container">
      {posts.map((post) => (
        <article class="card-surface flex h-full flex-col justify-between gap-4 p-5 transition hover:-translate-y-1 hover:border-primary/40 hover:shadow-primary/15">
          <div class="flex items-center justify-between text-sm text-foreground/70 dark:text-foreground-dark/70">
            <span class="rounded-full bg-foreground/5 px-3 py-1 font-semibold text-foreground dark:bg-background-dark/70 dark:text-foreground-dark">
              {dateFormatter.format(post.data.pubDate)}
            </span>
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <a class={tagClasses(tag)} href={tagHref(tag)}>
                  {tag}
                </a>
              ))}
            </div>
          </div>

          <div class="space-y-2">
            <h2 class="text-2xl font-semibold">
              <a class="hover:text-primary" href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h2>
            <p class="text-base text-foreground/75 dark:text-foreground-dark/70">{post.data.description}</p>
          </div>

          <div class="flex items-center gap-2 text-sm font-semibold text-primary dark:text-primary-dark">
            <a class="inline-flex items-center gap-2 hover:text-primary/80 dark:hover:text-primary-dark/80" href={`/blog/${post.slug}`}>
              Read article (FR)
              <span aria-hidden="true">â†’</span>
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
