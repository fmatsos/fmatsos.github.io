    </div>
    <div class="grid gap-4 md:grid-cols-2">
      {links.map((link) => (
        <a
          class="group flex items-center gap-4 border border-foreground/10 bg-background/70 p-5 shadow-lg transition hover:-translate-y-1 hover:border-primary/40 hover:shadow-primary/20 dark:border-background-dark/30 dark:bg-background-dark/80"
          href={link.href}
          target="_blank"
          rel="noreferrer noopener"
        >
          <span class="flex h-12 w-12 items-center justify-center bg-foreground/5 text-foreground ring-1 ring-foreground/10 transition group-hover:bg-primary/10 group-hover:text-primary dark:bg-background-dark/60 dark:text-foreground-dark dark:ring-background-dark/30 dark:group-hover:text-primary-dark" aria-hidden="true">
            <Image src={link.picto} alt={link.alt} class="h-7 w-7" loading="lazy" />
          </span>
          <span class="text-base font-semibold text-foreground group-hover:text-primary dark:text-foreground-dark dark:group-hover:text-primary-dark">{link.title}</span>
