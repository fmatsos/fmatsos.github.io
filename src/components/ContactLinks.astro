---
import type { ExternalLink } from '../data/links';
interface Props {
  items: ExternalLink[];
}
const { items } = Astro.props;
---
<div class="grid gap-4 sm:grid-cols-2">
  {items.map((link) => (
    <a
      class="group flex items-center gap-4 rounded-2xl border border-white/10 bg-slate-900/60 p-4 shadow-lg shadow-cyan-500/5 transition hover:-translate-y-1 hover:border-cyan-400/50 hover:shadow-cyan-500/20"
      href={link.href}
      target="_blank"
      rel="noreferrer noopener"
    >
      <span class="flex h-12 w-12 items-center justify-center rounded-xl bg-slate-800/80 ring-1 ring-white/5 transition group-hover:bg-cyan-500/20">
        <img class="h-7 w-7" src={link.picto} alt={link.alt} />
      </span>
      <span class="text-base font-semibold text-white group-hover:text-cyan-100">{link.title}</span>
    </a>
  ))}
</div>
