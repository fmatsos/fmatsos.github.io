---
import Card from '../atoms/Card.astro';
import Link from '../atoms/Link.astro';
import Image from '../atoms/Image.astro';

interface Props {
  href: string;
  title: string;
  picto: string;
  alt: string;
  lang?: 'fr' | 'en';
}

const { href, title, picto, alt, lang = 'fr' } = Astro.props;
const newTabText = '(ouvre dans un nouvel onglet)';
---

<div class="group flex items-center gap-4 transition">
  <Link href={href} external class="flex w-full items-center gap-4 no-underline">
    <span class="flex h-12 w-12 items-center justify-center rounded-xl bg-foreground/5 text-foreground dark:bg-background-dark/60 dark:text-foreground-dark group-hover:opacity-75" aria-hidden="true">
      <Image src={picto} alt={alt} class="h-7 w-7" loading="lazy" />
    </span>
    <span class="text-base font-semibold text-foreground dark:text-foreground-dark">{title}</span>
    <span class="sr-only">{newTabText}</span>
  </Link>
</div>
