---
interface Props {
  title: string;
  description?: string;
  subtitle?: string;
  icon?: string;
}

const { title, description, subtitle, icon } = Astro.props;
---

<section class="relative mb-8 overflow-hidden">
  <!-- Decorative background gradient -->
  <div class="absolute inset-0 -z-10 h-full w-full bg-gradient-to-br from-primary/5 via-transparent to-primary/5 dark:from-primary-dark/10 dark:via-transparent dark:to-primary-dark/10 blur-3xl" aria-hidden="true"></div>

  <div class="relative space-y-3 py-6">
    <!-- Main title -->
    <h1 class="text-3xl sm:text-4xl font-bold text-black dark:text-white tracking-tight animate-fade-in-up">
      {icon && <span class="mr-2">{icon}</span>}
      {title}
    </h1>

    <!-- Subtitle if provided -->
    {subtitle && (
      <p class="text-base text-primary dark:text-primary-dark font-semibold animate-fade-in-up animate-delay-100">
        {subtitle}
      </p>
    )}

    <!-- Description -->
    {description && (
      <p class="text-base text-foreground/70 dark:text-foreground-dark/70 max-w-2xl leading-relaxed animate-fade-in-up animate-delay-200">
        {description}
      </p>
    )}
  </div>

  <!-- Bottom accent line -->
  <div class="h-0.5 bg-gradient-to-r from-primary to-transparent dark:from-primary-dark dark:to-transparent animate-expand-width"></div>
</section>
