---
import { BASELINE, SITE_TITLE } from '../../config';

interface Props {
  lang?: 'fr' | 'en';
}

const { lang = 'fr' } = Astro.props;
const generatedText = lang === 'fr' ? 'Site généré avec Astro • Netlify' : 'Site generated with Astro • Netlify';
---

<footer class="border-t border-black/15 dark:border-white/20 py-8" role="contentinfo">
  <div class="container mx-auto flex flex-col gap-4 px-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <p class="text-lg font-semibold">{SITE_TITLE}</p>
    </div>
    <p class="text-sm text-black/60 dark:text-white/60">{generatedText}</p>
  </div>
</footer>
