---
import type { CareerEntry } from '../../data/curriculum';

interface Props {
  items: CareerEntry[];
  title: string;
  lang?: 'fr' | 'en';
}

const { items, title, lang = 'fr' } = Astro.props;
const currentLabel = lang === 'fr' ? 'Pr√©sent' : 'Present';
---

<section class="space-y-6">
  <h5 class="font-semibold text-black dark:text-white">{title}</h5>
  <ul class="space-y-4">
    {items.map((item) => (
      <li class="flex gap-4 border-l border-foreground/20 pl-4 dark:border-foreground-dark/20">
        <div class="flex-1 space-y-1">
          <p class="text-sm text-foreground/60 dark:text-foreground-dark/60">
            {item.from} - {item.to || currentLabel}
          </p>
          <p class="font-semibold text-black dark:text-white">{item.name}</p>
          <p class="text-foreground/70 dark:text-foreground-dark/70">{item.role}</p>
        </div>
      </li>
    ))}
  </ul>
</section>
