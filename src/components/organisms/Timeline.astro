---
interface TimelineItem {
  date: string;
  title: string;
  description: string;
  tags?: string[];
}

interface Props {
  items: TimelineItem[];
  title: string;
  lang?: 'fr' | 'en';
}

const { items, title, lang = 'fr' } = Astro.props;
---

<section class="space-y-6 border border-foreground/10 bg-background/70 p-6 shadow-lg dark:border-background-dark/30 dark:bg-background-dark/80">
  <h2 class="text-2xl font-semibold">{title}</h2>
  <div class="space-y-4" role="list" aria-label={title}>
    {items.map((item, index) => (
      <div
        class="flex gap-4 border-l-2 border-foreground/10 pl-4 dark:border-background-dark/40"
        role="listitem"
        aria-posinset={index + 1}
        aria-setsize={items.length}
      >
        <div class="flex-1 space-y-1">
          <p class="text-sm font-semibold text-primary dark:text-primary-dark">
            <time datetime={item.date}>{item.date}</time>
          </p>
          <h3 class="text-lg font-semibold text-foreground dark:text-foreground-dark">{item.title}</h3>
          <p class="text-base text-foreground/75 dark:text-foreground-dark/70">{item.description}</p>
          {item.tags && item.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 pt-2">
              {item.tags.map((tag) => (
                <span class="bg-foreground/5 px-2 py-1 text-xs font-semibold text-foreground/70 dark:bg-background-dark/60 dark:text-foreground-dark/70">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</section>
