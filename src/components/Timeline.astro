---
import type { CareerEntry } from '../data/curriculum';
interface Props {
  items: CareerEntry[];
  title: string;
}
const { items, title } = Astro.props;
---
<section class="card-surface space-y-6 p-6">
  <div class="flex items-center justify-between gap-2">
    <h2 class="text-xl font-semibold">{title}</h2>
  </div>
  <div class="relative space-y-6">
    <span class="absolute left-3 top-0 h-full w-px bg-foreground/10 dark:bg-background-dark/40" aria-hidden="true"></span>
    {items.map((entry) => (
      <article class="relative flex gap-4 rounded-xl border border-foreground/5 bg-background/70 p-4 shadow-sm shadow-foreground/10 transition dark:border-background-dark/30 dark:bg-background-dark/70">
        <div
          class="absolute -left-[9px] top-5 h-3 w-3 rounded-full bg-primary shadow shadow-primary/40 dark:bg-primary-dark"
          aria-hidden="true"
        ></div>
        <div class="flex-1 space-y-1">
          <div class="flex flex-col justify-between gap-1 sm:flex-row sm:items-center">
            <h3 class="text-lg font-semibold">{entry.name}</h3>
            <span class="text-sm font-medium text-foreground/70 dark:text-foreground-dark/70">
              {entry.from}
              {entry.to ? ` — ${entry.to}` : ' — Présent'}
            </span>
          </div>
          <p class="text-sm text-foreground/70 dark:text-foreground-dark/70">{entry.role}</p>
        </div>
      </article>
    ))}
  </div>
</section>
