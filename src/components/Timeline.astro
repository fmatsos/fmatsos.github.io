---
import type { CareerEntry } from '../data/curriculum';
interface Props {
  items: CareerEntry[];
  title: string;
}
const { items, title } = Astro.props;
---
<section class="space-y-6 rounded-2xl border border-white/10 bg-slate-900/60 p-6 shadow-lg shadow-cyan-500/10">
  <div class="flex items-center justify-between gap-2">
    <h2 class="text-xl font-semibold text-white">{title}</h2>
  </div>
  <div class="relative space-y-6">
    <span class="absolute left-3 top-0 h-full w-px bg-white/10" aria-hidden="true"></span>
    {items.map((entry) => (
      <article class="relative flex gap-4 rounded-xl border border-white/5 bg-slate-900/60 p-4 shadow-sm shadow-cyan-500/10">
        <div class="absolute -left-[9px] top-5 h-3 w-3 rounded-full bg-cyan-400 shadow shadow-cyan-500/50" aria-hidden="true"></div>
        <div class="flex-1 space-y-1">
          <div class="flex flex-col justify-between gap-1 sm:flex-row sm:items-center">
            <h3 class="text-lg font-semibold text-white">{entry.name}</h3>
            <span class="text-sm font-medium text-slate-300">{entry.from}{entry.to ? ` — ${entry.to}` : ' — Présent'}</span>
          </div>
          <p class="text-sm text-slate-300">{entry.role}</p>
        </div>
      </article>
    ))}
  </div>
</section>
