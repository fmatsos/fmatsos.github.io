---
interface Props {
  href: string;
  variant?: 'default' | 'primary' | 'subtle';
  external?: boolean;
  class?: string;
  ariaLabel?: string;
}

const {
  href,
  variant = 'default',
  external = false,
  class: className = '',
  ariaLabel,
  ...rest
} = Astro.props;

const baseClasses = 'transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded';

const variantClasses = {
  default: 'text-foreground hover:text-primary dark:text-foreground-dark dark:hover:text-primary-dark',
  primary: 'font-semibold text-primary underline decoration-primary/60 underline-offset-4 hover:decoration-primary dark:text-primary-dark dark:decoration-primary-dark/60 dark:hover:decoration-primary-dark',
  subtle: 'text-foreground/70 hover:text-foreground dark:text-foreground-dark/70 dark:hover:text-foreground-dark',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;

const externalProps = external ? {
  target: '_blank',
  rel: 'noreferrer noopener'
} : {};
---

<a
  class={classes}
  href={href}
  aria-label={ariaLabel}
  {...externalProps}
  {...rest}
>
  <slot />
</a>
