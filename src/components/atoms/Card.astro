---
interface Props {
  class?: string;
}

const {
  class: className = '',
  ...rest
} = Astro.props;

const classes = `rounded-2xl border border-foreground/10 bg-background/70 shadow-xl shadow-foreground/5 backdrop-blur dark:border-background-dark/30 dark:bg-background-dark/80 dark:shadow-background-dark/40 ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>
