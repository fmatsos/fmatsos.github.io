---
interface Props {
  variant?: 'default' | 'primary' | 'accent';
  size?: 'sm' | 'md';
  class?: string;
}

const {
  variant = 'default',
  size = 'sm',
  class: className = '',
  ...rest
} = Astro.props;

const baseClasses = 'inline-flex items-center gap-1 font-semibold';

const variantClasses = {
  default: 'bg-foreground/5 text-foreground ring-1 ring-foreground/10 dark:bg-background-dark/60 dark:text-foreground-dark dark:ring-background-dark/30',
  primary: 'bg-primary/10 text-primary ring-1 ring-primary/20 dark:bg-primary-dark/10 dark:text-primary-dark dark:ring-primary-dark/20',
  accent: 'bg-foreground/10 text-foreground dark:bg-foreground-dark/10 dark:text-foreground-dark',
};

const sizeClasses = {
  sm: 'px-2.5 py-1 text-xs tracking-tight',
  md: 'px-3 py-1.5 text-sm tracking-tight',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<span class={classes} {...rest}>
  <slot />
</span>
